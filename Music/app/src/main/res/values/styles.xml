<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/magenta</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="AppTheme.Cyan" parent="AppTheme">
        <item name="android:textColor">@color/magenta</item>
        <item name="android:background">@color/cyan</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.EditTextStyle" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:drawablePadding">8sp</item>
        <item name="android:layout_margin">@dimen/margin_default</item>

    </style>
    
</resources>